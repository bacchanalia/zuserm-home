[user]
  name = Mike Zuser
  email = mikezuser@gmail.com
[core]
  pager = less
  quotepath = false
[alias]
  a = add
  s = ! \
    cd ${GIT_PREFIX:-.} && \
    git status $@ && \
    stashes=`git stash list | wc -l` && \
    [ $stashes -gt 0 ] && echo $stashes stashes && \
    true
  r = rebase --autostash
  c = commit
  cp = cherry-pick
  cpcon = cherry-pick --continue
  d = diff
  ds = diff --staged
  r = reset HEAD
  co = checkout
  b = branch
  m = merge --no-commit
  l = log --color --decorate --topo-order
  lf = log --color --decorate --topo-order --follow
  ln = log --color --decorate --topo-order --name-status -M
  lt = log --color --decorate --topo-order --name-status -M \
         --notes=review --notes=bug --notes=dd
  dn = pull --no-commit
  up = push
  stat = show --stat
  vimdiff = difftool -y -t vimdiff
  meld = difftool -t meld
  graph = log --graph --oneline --color --decorate
  showm = show -M --summary
  ignored = ls-files --others
  pullr = !git stash && git pull -r && git stash pop
  logauthor = ! \
              cd ${GIT_PREFIX:-.} && \
              git log --format='%h^%f^%d^%ad^%cd^%an^%cn^%ae^%ce' $@      \
              | awk -F '^' '"{                                            \
                h=$1;f=$2;d=$3;ad=$4;cd=$5;an=$6;cn=$7;ae=$8;ce=$9;       \
                diffColor=\"\\033[35m\";                                  \
                sameColor=\"\\033[36m\";                                  \
                decoColor=\"\\033[37m\";                                  \
                endColor=\"\\033[0m\";                                    \
                if (length(f) == 0)                                       \
                  printf \"%s\\n\", h;                                    \
                else if (an != cn || ae != ce || ad != cd)                \
                  printf                                                  \
                    \"%s%s %s%s%s%s\\n\"                                  \
                    \"  %s  %-20s %-40s\\n\"                              \
                    \"!!%s  %-20s %-40s\\n\"                              \
                    ,                                                     \
                    diffColor, h, f, decoColor, d, endColor,              \
                    ad, an, ae, cd, cn, ce;                               \
                else                                                      \
                  printf                                                  \
                    \"%s%s %s%s%s%s\\n\"                                  \
                    \"  %s  %-20s %-40s\\n\"                              \
                    ,                                                     \
                    sameColor, h, f, decoColor, d, endColor,              \
                    ad, an, ae;                                           \
              }"'                                                         \
              | less -SR                                                  \
              && true
[color]
  diff = true
  status = true
  log = true
[push]
  default = simple
[gui]
  gcwarning = false
