#!/usr/bin/perl
use strict;
use warnings;

my $delay = 60*60;

sub main(@){
  my $date = `date +%Y-%m-%d_%s`;
  chomp $date;
  my $logFile = "/tmp/fetch-seedbox-$date.log";

  while(1){
    system "date >> $logFile";
    system "seedbox -g 2>&1 | tee -a $logFile";
    sleep $delay;
  }
}

&main(@ARGV);
