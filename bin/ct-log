#!/usr/bin/perl
use strict;
use warnings;

my $logDir = "$ENV{HOME}/.cyphertite/logs";

sub main(@){
  die "Usage: $0 ctfile dir\n" if @_ != 2 or not -d $_[1];
  my ($ctfile, $dir) = @_;

  system "mkdir", "-p", $logDir;
  my $date = `date +%Y-%m-%d_%s`;
  chomp $date;
  my $log = "$logDir/${ctfile}_${date}.log";

  exec "cyphertite -cvRf $ctfile $dir 2>&1 | tee $log";
}

&main(@ARGV);
