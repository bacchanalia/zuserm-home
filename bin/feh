#!/usr/bin/perl
use strict;
use warnings;
use Time::HiRes qw(sleep);

#args are given only if no other args are given on the cmdline
my @defaultArgs = qw(-Z -F);

sub processArgs(@);

sub main(@){
  my $pid = fork;
  if($pid == 0){
    sleep 0.5;
    exec "keys-to-window", "feh";
  }else{
    my @args = processArgs @_;

    system "/usr/bin/feh", @args;
    system "kill", $pid;
    system "stty", "sane";
  }
}

sub processArgs(@){
  my @args = @_;
  @args = ("-Z", "-F") if @args == 0;
  return @args;
}

&main(@ARGV);
