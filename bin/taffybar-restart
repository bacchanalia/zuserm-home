#!/usr/bin/perl
use strict;
use warnings;

sub main(@){
  system "killall", "taffybar-linux-x86_64";
  my $ok = 1;
  open TB, "taffybar 2>&1 |";
  my $line;
  while($line = <TB>){
    if($line =~ /Error occurred while loading configuration file/){
      close TB;
      system "term", "bash", "-c", "taffybar; read";
      system "alarm -s failure";
      $ok = 0;
    }
  }
  close TB;
  system "alarm -s success" if $ok;
}

&main(@ARGV);
