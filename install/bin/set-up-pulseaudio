#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $clientConf = "/etc/pulse/client.conf";

my $config = {
  autospawn => "no",
};

sub main(@) {
    getRoot @_;

    editFile $clientConf, sub {
      my $c = shift;
      for my $key(sort keys %$config){
        replaceOrAddLine $c, "\\s*;?\\s*$key\\s*=", "$key = $$config{$key}";
      }
      $c;
    };
}

&main(@ARGV);
