#!/usr/bin/perl
use strict;
use warnings;
use ScriptScript;

sub main(@) {
  my $alt = {
    pager => "/bin/less",
    "x-cursor-theme" => "/usr/share/icons/DMZ-Black/cursor.theme",
  };

  for my $name(keys %$alt){
    run "sudo", "update-alternatives", "--set", $name, $$alt{$name};
  }
}

main @ARGV;
