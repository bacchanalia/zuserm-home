#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $logindConfFile = "/etc/systemd/logind.conf";

sub main(@) {
    getRoot @_;

    run "sudo", "apt-get", "remove", "sysvinit-core";
    run "sudo", "apt-get", "install", "systemd-sysv";

    editFileConf $logindConfFile, getUsername, {
      HandlePowerKey => "ignore",
      HandleSuspendKey => "ignore",
      HandleHibernateKey => "ignore",
      HandleLidSwitch => "ignore",
    };

}

main @ARGV;

