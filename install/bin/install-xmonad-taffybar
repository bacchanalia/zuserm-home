#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@) {
    getRoot @_;
    run qw(apt-get install git haskell-platform xmonad
                                libcairo2-dev
                                libglib2.0-dev
                                libgtk2.0-dev
                                libpango1.0-dev
                                libxml2-dev
          );
    runUser qw(cabal update);
    runUser qw(cabal install gtk2hs-buildtools
                         errors
                         filemanip
                         json
                         posix-timer
                         regex-pcre
          );

    $ENV{PATH} = "$ENV{HOME}/.cabal/bin:$ENV{PATH}";
    installFromGit "git://github.com/teleshoes/taffybar.git";
}

main @ARGV;
