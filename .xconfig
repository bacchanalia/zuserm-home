sudo mnt --other -m Charybdis

Esetroot -scale "$HOME/Pictures/Backgrounds/jamaicadyer-background.jpg"
xsetroot -cursor_name left_ptr
for x in $HOME/.xresources-*; do xrdb -merge "$x"; done

setxkbmap -option
setxkbmap -option terminate:ctrl_alt_bksp
setxkbmap -option caps:escape

xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Tap Time" 0
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Two-Finger Scrolling" 1 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Scrolling Distance" 50 43
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Move Speed" 1 1.75 0.035842 40
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Edge Scrolling" 0 0 0

# SynPS/2 Synaptics TouchPad: x-axis range 1472 - 5658 (res 41)
# SynPS/2 Synaptics TouchPad: y-axis range 1408 - 4692 (res 54)
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Soft Button Areas" 3983 0 0 0 3146 3983 0 0
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Area" 0 0 1642 4457


#http://www.thinkwiki.org/wiki/How_to_configure_the_TrackPoint
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200

xset s off
xset s noblank
xset dpms 0 0 0

xset -b #no bell
